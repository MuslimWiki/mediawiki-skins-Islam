# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF on checkout
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force these files to be LF on checkout
*.sh text eol=lf
*.php text eol=lf
*.js text eol=lf
*.json text eol=lf
*.css text eol=lf
*.less text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.svg binary

# Ignore path case on Windows
[core]
    ignorecase = true

# Properly handle line endings for shell scripts
*.sh text eol=lf

# Ensure files with spaces in the name work correctly
* -text
*.php text
*.css text
*.js text
*.json text
*.md text
*.txt text
*.xml text
*.yml text
*.yaml text

# Explicitly declare binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.svg binary

# Prevent line ending changes in these files
*.{cmd,[cC][mM][dD]} -text
*.{bat,[bB][aA][tT]} -text
