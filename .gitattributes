# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF on checkout
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force these files to be LF on checkout
*.sh text eol=lf
*.php text eol=lf
*.js text eol=lf
*.json text eol=lf
*.css text eol=lf
*.less text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.svg binary

# Git configuration
[core]
    ignorecase = true
    autocrlf = input
    eol = lf

# Prevent line ending changes in these files
*.{cmd,[cC][mM][dD]} -text
*.{bat,[bB][aA][tT]} -text
